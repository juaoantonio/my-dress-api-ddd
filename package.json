{
  "name": "nest-ddd-template",
  "type": "commonjs",
  "private": false,
  "version": "1.0.0",
  "description": "DDD, Clean Architecture, NestJS, TypeScript, Vitest template",
  "license": "MIT",
  "scripts": {
    "type-check": "tsc --noEmit",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "dotenv -v NODE_ENV=development -- nest start",
    "start:dev": "dotenv -v NODE_ENV=development -- nest start --watch",
    "start:debug": "dotenv -v NODE_ENV=development -- nest start --debug --watch",
    "start:prod": "node dist/infra/http/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "pnpm run type-check && vitest run",
    "test:watch": "pnpm run type-check && vitest",
    "test:cov": "pnpm run type-check && vitest run --coverage",
    "test:debug": "pnpm run type-check && vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "pnpm run type-check && vitest run --config ./vitest.config.e2e.mts",
    "test:int": "pnpm run type-check && vitest run --config ./vitest.config.int.mts"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.2",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.3.2",
    "@nestjs/platform-express": "^10.3.2",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/typeorm": "^10.0.2",
    "@types/lodash": "^4.17.7",
    "class-validator": "^0.14.1",
    "dotenv-cli": "^7.4.2",
    "eventemitter2": "^6.4.9",
    "joi": "^17.13.3",
    "lodash": "^4.17.21",
    "mysql2": "^3.11.3",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.1",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.2",
    "@swc/cli": "^0.3.14",
    "@swc/core": "^1.7.23",
    "@testcontainers/mysql": "^10.13.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.16",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-istanbul": "^2.1.1",
    "@vitest/coverage-v8": "^2.1.1",
    "@vitest/ui": "^2.1.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "unplugin-swc": "^1.5.1",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.1"
  }
}
