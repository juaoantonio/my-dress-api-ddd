{
  "name": "nest-ddd-template",
  "type": "commonjs",
  "private": false,
  "version": "1.0.0",
  "description": "DDD, Clean Architecture, NestJS, TypeScript, Vitest template",
  "license": "MIT",
  "scripts": {
    "type-check": "tsc --noEmit",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "dotenv -v NODE_ENV=development -- nest start",
    "start:dev": "dotenv -v NODE_ENV=development -- nest start --watch",
    "start:debug": "dotenv -v NODE_ENV=development -- nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "pnpm run type-check && vitest run",
    "test:watch": "pnpm run type-check && vitest",
    "test:debug": "pnpm run type-check && vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "pnpm run type-check && vitest run --config ./vitest.config.e2e.mts",
    "test:int": "pnpm run type-check && vitest run --config ./vitest.config.int.mts",
    "test:int:watch": "pnpm run type-check && vitest --config ./vitest.config.int.mts",
    "test:all": "pnpm run type-check && vitest run && vitest run --config ./vitest.config.int.mts && vitest run --config ./vitest.config.e2e.mts ",
    "test:cov": "pnpm run type-check && vitest run --coverage --config ./vitest.config.cov.mts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.682.0",
    "@aws-sdk/s3-request-presigner": "^3.682.0",
    "@nestjs/cli": "^10.4.5",
    "@nestjs/common": "^10.4.6",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.6",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.4.6",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/swagger": "^8.0.1",
    "@nestjs/testing": "^10.4.6",
    "@nestjs/typeorm": "^10.0.2",
    "@testcontainers/postgresql": "^10.13.2",
    "aws-sdk": "^2.1691.0",
    "chance": "^1.1.12",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "dotenv-cli": "^7.4.2",
    "eventemitter2": "^6.4.9",
    "express": "^4.21.1",
    "joi": "^17.13.3",
    "lodash": "^4.17.21",
    "multer": "1.4.5-lts.1",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "uuid": "^11.0.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.5.0",
    "@swc/core": "^1.7.42",
    "@types/chance": "^1.1.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.0",
    "@types/lodash": "^4.17.13",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.8.6",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "@vitest/coverage-istanbul": "^2.1.4",
    "@vitest/coverage-v8": "^2.1.4",
    "@vitest/ui": "^2.1.4",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3",
    "unplugin-swc": "^1.5.1",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.4"
  }
}
